<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="MyThemeDay" parent="Theme.Material">
        <item name="superColor">@color/gray</item>
        <item name="iconColor">@color/white</item>
        <item name="textInputColor">@color/gray</item>
    </style>

    <style name="MyThemeNight" parent="Theme.Material">
        <item name="superColor">@color/white</item>
        <item name="iconColor">@color/black</item>
        <item name="textInputColor">@color/white</item>
    </style>

    <style name="MyThemeMars" parent="Theme.Material">
        <item name="superColor">@color/mars_color</item>
        <item name="iconColor">@color/black</item>
        <item name="textInputColor">@color/mars_color</item>
    </style>

    <style name="MyThemeMoon" parent="Theme.Material">
        <item name="superColor">@color/moon_color</item>
        <item name="iconColor">@color/black</item>
        <item name="textInputColor">@color/moon_color</item>
    </style>


    <style name="Theme.Material" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?superColor</item>
        <item name="colorPrimaryVariant">?superColor</item>
        <item name="colorOnPrimary">?superColor</item>

        <item name="textInputStyle">@style/myTextInputLayoutStyle</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyle</item>
        <item name="floatingActionButtonStyle">@style/myFABStyle</item>
        <item name="tabStyle">@style/myTabStyle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="myTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="textAllCaps">false</item>
    </style>

    <style name="myBottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="backgroundTint">@color/gray</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="myFABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/gray</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="myTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="helperTextTextColor">?textInputColor</item>
        <item name="boxBackgroundColor">?textInputColor</item>
    </style>

    <style name="myChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/gray</item>
<!--        <item name="rippleColor">@color/color_gray</item>-->
<!--        <item name="chipStrokeColor">@color/color_gray</item>-->
<!--        <item name="android:windowBackground">@color/color_gray</item>-->
    </style>
</resources>