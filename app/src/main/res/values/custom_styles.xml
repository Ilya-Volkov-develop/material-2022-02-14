<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyThemeDay" parent="Theme.Material">
        <item name="superColor">@color/gray</item>
        <item name="iconColor">@color/white</item>
        <item name="textInputColor">@color/white</item>
    </style>

    <style name="MyThemeMars" parent="Theme.Material">
        <item name="superColor">@color/mars_color</item>
        <item name="iconColor">@color/black</item>
        <item name="textInputColor">@color/mars_color</item>
    </style>

    <style name="MyThemeMoon" parent="Theme.Material">
        <item name="superColor">@color/moon_color</item>
        <item name="iconColor">@color/black</item>
        <item name="textInputColor">@color/moon_color</item>
    </style>



    <style name="myTextView" parent="Theme.Material">
        <item name="fontFamily">@font/jua</item>
    </style>

    <style name="barTextStyle" parent="Theme.Material">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="myTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="color">@color/mars_color</item>
    </style>

    <style name="myBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/gray</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="myTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="helperTextTextColor">?textInputColor</item>
        <item name="boxBackgroundColor">?textInputColor</item>
    </style>

    <style name="myChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/gray</item>
    </style>

    <style name="MyTextAppearanceHeadline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/azeret</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>